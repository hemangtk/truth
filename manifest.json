{
    "manifest_version": 3,
    "name": "Google Review Analyzer",
    "version": "1.0.0",
    "description": "Analyzes Google reviews to identify potentially fake or suspicious reviews",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "assets/icon16.jpg",
        "48": "assets/icon48.jpg",
        "128": "assets/icon128.jpg"
      }
    },
    "icons": {
        "16": "assets/icon16.jpg",
        "48": "assets/icon48.jpg",
      "128": "assets/icon128.jpg"
    },
    "content_scripts": [
      {
        "matches": ["*://*.google.com/maps/place/*"],
        "js": [
          "src/content/reviewAnalyzer.js",
          "src/content/reviewObserver.js",
          "src/content/contentScript.js"
        ],
        "css": ["styles/content.css"]
      }
    ],
    "background": {
      "service_worker": "src/background/background.js",
      "type": "module"
    }
  }